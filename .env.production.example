# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-production-service-key

# JWT Configuration
JWT_SECRET=your-production-jwt-secret

# Email Configuration
EMAIL_ENCRYPTION_KEY=your-32-char-encryption-key

# Google OAuth2 (Primary)
GOOGLE_OAUTH2_CLIENT_ID=your-production-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_CLIENT_SECRET=your-production-client-secret
GOOGLE_OAUTH2_REDIRECT_URI=https://your-domain.com/api/oauth2/auth/callback

# Microsoft OAuth2 (Optional)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=https://your-domain.com/api/oauth2/microsoft/callback

# SMTP Fallback (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user@gmail.com
SMTP_PASS=your-app-password

# Production Settings
NODE_ENV=production
PORT=4000
FRONTEND_PORT=3001

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# File Upload Limits
MAX_FILE_SIZE=200MB
UPLOAD_LIMIT=52428800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/mailsender/app.log

# SSL/TLS (for Nginx configuration)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key